<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_get_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get users"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btn_create_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create post"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btn_get_post_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get post by id"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/btn_get_post_by_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get post by user id"
        tools:ignore="HardcodedText" />

</LinearLayout>